<div id="artistBg">
</div>
<div class="container-fluid">
    <div class="row">
        <div class="sidebar">
            <div id="sidebar-padding">
                <div id="img-container">
                    <div class="ratio img-responsive img-circle" style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQI_UrA4KamQurKaNVZZmgdEjRD8A7yADqDfllUhP0T_1VZWDMI);">
                    </div>
                </div>
                <h2 id="artistName">{{user.name}}</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
                    magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation. Lorem ipsum dolor sit amet.</p>
                <div id="pills">
                    <span class="badge badge-pill">Color</span>
                    <span class="badge badge-pill">American Traditional</span>
                    <span class="badge badge-pill">Realism</span>
                    <span class="badge badge-pill">Lettering</span>
                </div>
            </div>
            <div id="contact">
                <h3 class="text-center">{{user.shopName}}</h3>
                <h6 class="text-center">{{user.address}}</h6>
                <h6 class="text-center">{{user.city}},&nbsp{{user.state}}&nbsp{{user.zip}}</h6>
                
                <h5 id="phoneInfo" class="text-center">
                    <i class="fas fa-phone"></i>&nbsp{{user.phoneNumber}}</h5>
            </div>
        </div>
        <div class="col justify-content-md-center">
            <div class="justify-content-md-center" id="artistRow3">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="http://via.placeholder.com/550x350" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="http://via.placeholder.com/550x350" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="http://via.placeholder.com/550x350" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>