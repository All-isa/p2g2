<div id="artistBg">
</div>
<div class="container-fluid">
    <div class="row">
        <div class="sidebar">
            <div id="sidebar-padding">
                <div id="img-container">
                    <div class="ratio img-responsive img-circle" style="background-image: url({{artist.profilePicture}};">
                    </div>
                </div>
                <h2 class="lessDark" id="artistName">{{artist.name}}</h2>
                <p>{{artist.short_bio}}</p>
                <div class="lessDark" id="pills">
                    {{#if artist.color}}
                    <span class="badge badge-pill">Color</span>
                    {{else}}
                    <span class="badge badge-pill">Black & White</span>
                    {{/if}}
                    <span class="badge badge-pill">American Traditional</span>
                    <span class="badge badge-pill">Realism</span>
                    <span class="badge badge-pill">Lettering</span>
                </div>
            </div>
            <div id="contact">
                <h3 class="dark text-center">{{artist.shopName}}</h3>
                <h6 class="dark text-center">{{artist.address}}</h6>
                <h6 class="dark text-center">{{artist.city}},&nbsp{{artist.state}}&nbsp{{artist.zip}}</h6>

                <h5 id="phoneInfo" class="dark text-center">
                    <i class="fas fa-phone"></i>&nbsp{{artist.phoneNumber}}</h5>
            </div>
        </div>
        <div class="col justify-content-md-center">
            <div class="justify-content-md-center" id="artistRow3">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{artist.portfolio_1}}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{artist.portfolio_2}}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{artist.portfolio_3}}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{artist.portfolio_4}}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>